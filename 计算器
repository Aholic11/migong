#include<stdio.h>
#include<string.h>
int main()
{
	char strExp[] = "3+4";
	int a = strExp[0] - '0';
	int b = strExp[2] - '0';
	int sum = a + b;
	printf("sum=%d\n",sum);
	return 0;
}

#include<stdio.h>
#include<string.h>
int main()
{
	char strExp[]="1+2+2+1+2+5+4-1-3+4-8";
	int sum = strExp[0] - '0';
	for(int i = 1;i < strlen(strExp);i++)
	{ 
		if(strExp[i] == '+')
		{
			sum = sum + strExp[i+1] - '0';
			i++;
		}
		else if(strExp[i] == '-')
		{
			sum = sum - strExp[i+1] + '0';
			i++;
		}
	}
	printf("sum = %d\n",sum);
	return 0;
}

#include<stdio.h>
#include<string.h>
int main()
{
	char strExp[]="2*2/4*1/1*2*3/2";
	int sum = strExp[0] - '0';
	for(int i = 1;i < strlen(strExp);i++)
	{ 
		if(strExp[i] == '*')
		{
			sum = sum * (strExp[i+1] - '0');
			i++;
		}
		else if(strExp[i] == '/')
		{
			sum = sum / (strExp[i+1] - '0');
			i++;
		}
	}
	printf("sum = %d\n",sum);
	return 0;
}

#include<stdio.h>
#include<string.h>
int main()
{
	char strExp[]="2+2*3+2/2-1";
	char strTmp[strlen(strExp)];
	int strTmpindex=-1;
	for(int i=0;i<strlen(strExp);i++)
	{
		if(strExp[i]=='*')
		{
			int a=strTmp[strTmpindex]-'0';
			int b=strExp[i+1]-'0';
			strTmp[strTmpindex]=a*b+'0';
			i++;
		}
		else if(strExp[i]=='/')
		{
			int a=strTmp[strTmpindex]-'0';
			int b=strExp[i+1]-'0';
			strTmp[strTmpindex]=a/b+'0';
			i++;
		}
		else
		{
			strTmp[++strTmpindex]=strExp[i];
		}
	}
	int sum = strTmp[0] - '0';
	for(int j = 1;j < strlen(strTmp);j++)
	{ 
		if(strTmp[j] == '+')
		{
			sum = sum + strTmp[j+1] - '0';
			j++;
		}
		else if(strTmp[j] == '-')
		{
			sum = sum - strTmp[j+1] + '0';
			j++;
		}
	}
	printf("sum = %d\n",sum);
	return 0;
}
